            </div>
        </div>
        <div class="panel-footer panel-primary">
                  <div class="row">
                    <div class="col-md-12">
                        <% if @coche.errors.any? %>
                            <div id="errorExplanation" class="alert alert-danger alert-dismissable">
                              <h2><%= pluralize(@coche.errors.count, "error/es encontrados") %></h2>
                              <ul>
                              <% @coche.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                              <% end %>
                              </ul>
                            </div>
                      <% end %>

                    </div>        
                  </div>

            </div>
        <div id="error"></div>
        
    </div>
  </div>
</div>
</div>