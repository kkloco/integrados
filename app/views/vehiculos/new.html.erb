<div id="wrapper">
<div id="row">
  <div class="col-md-12 center-block" style="float:none;"> 
    <%= render "partials/navigation" %>
      <div class="row"> 
        <div class="margen">
            <%= link_to "Volver", {controller: "vehiculos", action: "show"},{class:"btn btn-primary"} %> 
          </div>  
        <div class="col-md-12">
            <div class="panel panel-primary">

               <div class="panel-heading"> <h3 class="panel-title">Nuevo vehiculo:</h3></div>

               <div class="panel-body">
                
                  <%= form_for :cars, :url => { :action => :create },:html =>{role:"form", id:"form_prop"} do |f| %>
                      
                          <div class="row">
                                                
                                <div class="form-group col-md-2">
                                  <%= f.label :matricula %><br>
                                  <%= f.text_field :matricula, class:"form-control" %>
                                </div>

                                <div class="form-group col-md-3">
                                  <%= f.label :localizaciÃ³n %><br>
                                  <%= f.text_field :localizacion, class:"form-control" %>
                                </div>

                                
                                <div class="form-group col-md-3">
                                  <%= f.label :conductor %><br>
                                  <%= f.text_field :conductor, class:"form-control" %>
                                </div>

                                <div class="form-group col-md-4">
                                  <%= f.label :finalidad %><br>
                                  <%= f.text_field :finalidad, class:"form-control"%><br>
                                </div>

                            </div>

                           
                          <div class="actions">
                                <%= f.submit "Alta de vehiculo", class:"btn btn-primary" %>
