<div id="wrapper">
<div id="row">
  <div class="col-md-12 center-block" style="float:none;"> 
    <%= render "partials/navigation" %>
      <div class="row"> 
        <div class="margen">
            <%= link_to "Volver", {controller: "vehiculos", action: "show"},{class:"btn btn-primary"} %> 
            
          </div>  
        <div class="col-md-12">

            <div class="panel panel-primary">

               <div class="panel-heading"> <h3 class="panel-title">Modificar vehiculo de matricula: <%= @coche.matricula %></h3> </div>

               <div class="panel-body">

                  <%= form_for :cars, :url => { :action => :update, :matricula => @coche.matricula },:method => :put, :html =>{role:"form", id:"form_prop"} do |f| %>

                           <div class="row">
                                                
                                <div class="form-group col-md-2">
                                  <%= f.label :matricula %><br>
                                  <%= f.text_field :matricula, class:"form-control", :value => @coche.matricula %>
                                </div>

                                <div class="form-group col-md-3">
                                  <%= f.label :localizaciÃ³n %><br>
                                  <%= f.text_field :localizacion, class:"form-control", :value => @coche.localizacion %>
                                </div>

                                
                                <div class="form-group col-md-3">
                                  <%= f.label :conductor %><br>
                                  <%= f.text_field :conductor, class:"form-control", :value => @coche.conductor %>
                                </div>

                                <div class="form-group col-md-4">
                                  <%= f.label :finalidad %><br>
                                  <%= f.text_field :finalidad, class:"form-control", :value => @coche.finalidad %><br>
                                </div>

                            </div>



                          <div class="actions">
                                <%= f.submit "Modificar vehiculo", class:"btn btn-primary", :id =>"btnEnviar" %>
                          </div>                         
                  <% end %>
                 

               </div>
            </div>
            <div class="panel-footer panel-primary">
                  <div class="row">
                    <div class="col-md-12">
                        <% if @coche.errors.any? %>
                            <div id="errorExplanation" class="alert alert-danger alert-dismissable">
                              <h2><%= pluralize(@coche.errors.count, "error/es encontrados") %></h2>
                              <ul>
                              <% @coche.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                              <% end %>
                              </ul>
                            </div>
                      <% end %>

                    </div>        
                  </div>

            </div>
        </div>
        <div id="error"></div>

    </div>

  </div>
</div>
</div>