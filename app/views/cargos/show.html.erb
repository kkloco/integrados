<div id="wrapper">
<div id="row">
	<div class="col-md-12 center-block" style="float:none;"> 
	 	<%= render "partials/navigation" %>
			<div class="row">
				<div class="margen">
					<%= link_to "Nuevo", {controller: "cargos", action: "new"}, {class:"btn btn-primary"}  %>  	
				</div>
				
				<div class="col-md-12 center-block" style="float:none;">
								<table class="table table-striped table-bordered">
									<thead>
									<tr class="success">
										<th>Nombre</th>
										<th>Opciones</th>
									</tr>
									</thead>
									<tbody>
								          <% @cargos.each do |cargo| %> 
								           <tr>
								             <td><%= cargo.nombre %></td>
								             <td><%= link_to "Editar", :action => :edit, :id => cargo.id %> 
								                <span>|</span>
								             	<%= link_to "Eliminar", { :action => :destroy, :id => cargo.id }, :method => :delete, :data => { :confirm => 'Â¿Seguro que desea eliminar el cargo?' } %>
								             
								             </td>
								           </tr>
								          <% end %>
									</tbody>
								</table>
						<%= paginate(@cargos) %>		
				</div>			
			</div>
	</div>		
</div>
</div>
