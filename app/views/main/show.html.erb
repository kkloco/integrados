<div id="wrapper">
	<div id="row">
	 <div class="col-md-12 center-block" style="float:none;"> 
	   <%= render "partials/navigation" %>
	  	<div class="row">
	        <div class="margen">
	        	<%= link_to "Nuevo", {controller: "main", action: "new"},{class:"btn btn-primary"} %> 
	        </div>	 
			<div class="col-md-12 center-block" style="float:none;">
				
							<table class="table table-striped table-bordered">
								<thead>
								<tr class="success">
									<th>Nombre</th>
									<th>DNI</th>
									<th>Cargo</th>
									<th>Rol</th>
									<th>Email</th>
									
									<th>Opciones</th>
								</tr>
								</thead>
								<tbody>
							          <% @usuarios.each do |usuario| %> 
							           <tr>
							             <td><%= usuario.nombre %></td>
							             <td><%= usuario.dni %></td>
							             <td><%= usuario.cargo %></td>
							             <td><%= usuario.rol %></td>
							             <td><%= usuario.email %></td>
							             

							             <td><%= link_to "Editar", :action => :edit, :id => usuario.id %>			             				             
							             <% if usuario.rol != "ADMINISTRADOR" %>
							                <span>|</span> 
							             	<%= link_to "Eliminar", { :action => :destroy, :id => usuario.id }, :method => :delete, :data => { :confirm => 'Â¿Seguro que desea eliminar el usuario?' } %>
							             <%end%>	

							             </td>
							              
							           </tr>
							          <% end %>
								</tbody>
							</table>
							<%= paginate(@usuarios) %>
				
			</div>			
		</div>
	 </div>
	</div>
</div>


